<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/background1">

	<!-- ActionBar -->
	<LinearLayout style="@style/TitleBar">
		<ImageButton
			style="@style/TitleBarAction"
			android:onClick="onLogoClick"
			android:src="@drawable/acic_home"/>
		<ImageView style="@style/TitleBarSeparator" />
       <TextView 
       	style="@style/TitleBarText" 
      		android:text="タイマー"/>
				
		<ImageView style="@style/TitleBarSeparator" />

		<ImageButton 
			style="@style/TitleBarAction" 
			android:onClick="onReaderButtonClick"
			android:src="@drawable/acic_barcode" />
		<ImageView style="@style/TitleBarSeparator" />

		<ImageButton 
			style="@style/TitleBarAction" 
			android:onClick="onHistoryButtonClick"
			android:src="@drawable/acic_history" />
 
		<requestFocus />
	</LinearLayout>  
	<ImageView style="@style/HorizontalSeparator"/>
	
	<!-- ActionBar End -->

	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_weight="2" 
		android:orientation="vertical" 
		android:layout_height="fill_parent" 
		style="@style/InformationForm" android:gravity="center">
		
		<TableLayout android:layout_height="wrap_content" 
			android:layout_gravity="center_vertical" 
			android:stretchColumns="2" 
			android:layout_weight="1" 
			android:orientation="horizontal" android:layout_width="fill_parent">
				
			<TableRow android:id="@+id/JanCodeTableRow" android:visibility="gone">
					<TextView style="@style/InformationFormText" 
						android:text="JANコード" />
					<TextView android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="JanCode" 
						style="@style/InformationFormText" 
						android:id="@+id/JanCodeTextView"/>			
			</TableRow>
			
			<TextView style="@style/InformationFormText" android:hint="商品名" android:id="@+id/NameTextView" android:visibility="gone"/>
			
			<TableRow android:id="@+id/TimerLimitTableRow" android:visibility="gone">
				<TextView style="@style/InformationFormText" 
					android:text="時間（秒）" />
				<TextView style="@style/InformationFormText" 
					android:hint="時間" 
					android:inputType="number" 
					android:id="@+id/TimerLimitTextView"/>
			</TableRow>
		
			<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/ConfirmCreationLinearLayout" android:visibility="gone">
					
					<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/InformationFormText" android:text="この商品は登録されていません。\n商品の登録を行いますか？">
					</TextView>
		
					<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center">
			
						<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes" android:id="@+id/ConfirmCreationYesButton" style="@style/ButtonStyle">
						</Button>
			
						<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" android:id="@+id/ConfirmCreationNoButton" style="@style/ButtonStyle">
						</Button>
					</LinearLayout>
				</LinearLayout>
		</TableLayout>
		
		<ImageView android:layout_height="wrap_content" 
			android:layout_weight="1" 
			android:layout_width="fill_parent" android:id="@+id/NoodleImageView">
		</ImageView>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" 
		android:layout_height="fill_parent" android:layout_weight="2" android:gravity="center">
	
		<LinearLayout android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1">
		
			<LinearLayout android:orientation="vertical" 
				android:layout_weight="1" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
			
				<TextView android:text="3" 
					android:layout_weight="2" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:gravity="center" 
					style="@style/TimeTextView" 
					android:id="@+id/MinTextView">
				</TextView>
		
				<TextView android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_weight="1" 
					android:gravity="bottom" 
					android:layout_gravity="bottom|right" 
					android:text="分">
				</TextView>
			</LinearLayout>
			
			<LinearLayout android:layout_height="wrap_content" 
				android:layout_weight="1" 
				android:layout_width="fill_parent" android:orientation="vertical">
				
				<Button android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:text="+" 
					android:id="@+id/MinUpButton" 
					style="@style/PickerButton">
				</Button>
				
				<Button android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:text="-" 
					android:id="@+id/MinDownButton" 
					style="@style/PickerButton">
				</Button>
			</LinearLayout>
		</LinearLayout>
		
		<LinearLayout android:layout_height="wrap_content" 
			android:orientation="horizontal" 
			android:layout_width="fill_parent" 
			android:layout_weight="1">
		
			<LinearLayout android:orientation="vertical" 
				android:layout_width="fill_parent" 
				android:layout_weight="1" 
				android:layout_height="wrap_content">
			
				<TextView android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:text="00" 
					android:layout_weight="2" 
					android:gravity="center" 
					style="@style/TimeTextView" 
					android:id="@+id/SecTextView">
				</TextView>
		
				<TextView android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_weight="1" 
					android:gravity="bottom" 
					android:layout_gravity="bottom|right" 
					android:text="秒">
				</TextView>
			</LinearLayout>
			
			<LinearLayout android:layout_height="wrap_content" 
				android:orientation="vertical" 
				android:layout_weight="1" 
				android:layout_width="fill_parent">
			
				<Button android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:text="+" 
					android:id="@+id/SecUpButton" 
					style="@style/PickerButton">
				</Button>
			
				<Button android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:text="-" 
					android:id="@+id/SecDownButton" 
					style="@style/PickerButton">
				</Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent" 
		android:gravity="center" 
		android:layout_weight="2" 
		android:orientation="vertical" 
		android:layout_height="fill_parent">
	
		<Button android:layout_width="wrap_content" 
			android:text="開始" 
			android:layout_height="wrap_content" 
			android:id="@+id/TimerStartButton" 
			style="@style/ButtonStyle">
		</Button>

		<ImageView android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:id="@+id/TimerImageView" 
			android:src="@drawable/acic_timer">
		</ImageView>
		
		<Button android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:id="@+id/TimerEndButton" 
			android:text="終了" 
			style="@style/ButtonStyle" 
			android:visibility="visible">
		</Button>
	</LinearLayout>
</LinearLayout>