<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/background1"
	android:orientation="vertical">
	
	<!-- ActionBar -->
	<LinearLayout style="@style/TitleBar">
		<Button
			style="@style/TitleBarLogo"
			android:onClick="onLogoClick"
			android:background="@drawable/title_logo"/>
       <TextView 
       	style="@style/TitleBarText" 
      		android:text="登録画面"/>
				
		<ImageButton 
			style="@style/TitleBarAction2" 
			android:onClick="onHistoryButtonClick"
			android:src="@drawable/ic_title_history" />

		<ImageButton 
			style="@style/TitleBarAction2" 
			android:onClick="onTimerButtonClick"
			android:src="@drawable/ic_title_timer" />
 
		<requestFocus />
	</LinearLayout>  
	<ImageView style="@style/HorizontalSeparator"/>
	
	<!-- ActionBar End -->
    <LinearLayout style="@style/RaimonBar"
    	android:background="@drawable/raimon"/>
    	
    <ImageView style="@style/HorizontalSeparator"/>
	
	<LinearLayout 
		style="@style/InformationForm"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:orientation="vertical">

		<LinearLayout 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_weight="1"
			android:orientation="horizontal">
			<LinearLayout 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">
				<TextView 
					style="@style/InformationFormText2"
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content"
					android:text="JANコード"/>
				<TextView
					style="@style/InformationFormText2"
					android:id="@+id/JanEdit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:maxLength="13"/>
			</LinearLayout> 
			<ImageButton 
					style="@style/InformationFormImage"
					android:onClick="onLoadImageClick"
					android:src="@drawable/img_ramen_noimage"
					android:padding="0dip"
					android:background="@android:color/transparent"
					android:id="@+id/NoodleImageButton"/>
		</LinearLayout> 

		<TextView
			style="@style/InformationFormText2"
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:gravity="center_vertical"
			android:text="商品名"/>

		<EditText 
			style="@style/InformationFormEdit2"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/form_edittext_height"
			android:hint="商品名" 
			android:id="@+id/NameEdit"
			android:gravity="center_vertical"/>
						
		<TextView
			style="@style/InformationFormText2"
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:gravity="center_vertical"
			android:text="時間"/>			
			
		<RelativeLayout 
			android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_weight="1"
	       android:gravity="center" >
	
			<TextView 
				android:text="3"
			 	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/number_to_button"
				style="@style/TimeTextView"
				android:gravity="center_vertical"
			 	android:id="@+id/MinTextView"/>
			
			<TextView 
				android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
			   	android:layout_below="@+id/MinDownButton"
			   	android:layout_toLeftOf="@+id/MinDownButton"
			   	android:textColor="@color/primary_text"
			   	android:id="@+id/MinDiscriptionTextView"
			   	android:text="分"/>
					
			<Button 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/MinTextView"
				android:id="@+id/MinUpButton"
				android:onClick="onMinUpClick"
				android:gravity="center_vertical"
				style="@style/PlusButton"/>
			
			<Button 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/MinTextView"
				android:layout_below="@+id/MinUpButton"
				android:id="@+id/MinDownButton"
				android:onClick="onMinDownClick"
				style="@style/MinusButton"/>

			<TextView 
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="@dimen/number_to_button"
			    android:layout_marginLeft="@dimen/number_to_button"
			    android:text="00"
				android:layout_toRightOf="@+id/MinUpButton"
				android:gravity="center_vertical"
			    style="@style/TimeTextView"
			    android:id="@+id/SecTextView"/>	
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_below="@+id/SecDownButton"
				android:layout_toLeftOf="@+id/SecDownButton"
				android:textColor="@color/primary_text"
				android:text="秒"/>

            <Button 
            	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/SecUpButton"
				android:layout_toRightOf="@+id/SecTextView"
				android:onClick="onSecUpClick"
				android:gravity="center_vertical"
				style="@style/PlusButton"/>
	
            <Button
             	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/SecTextView"
				android:layout_below="@+id/SecUpButton"
				android:id="@+id/SecDownButton"
				android:onClick="onSecDownClick"
				style="@style/MinusButton"/>
	       
		</RelativeLayout>
	</LinearLayout> 


	<Button
		android:text="登録"
		android:layout_gravity="center_horizontal"
		android:onClick="onCreateClick"
		android:textSize="@dimen/text_size_large"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>
</LinearLayout>