<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#808080"
		android:orientation="horizontal">
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal">
			
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/logo"
				android:onClick="onLogoClick"
				android:src="@drawable/icon"/>
		</LinearLayout>  
				
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
				
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/StartButton"
				android:onClick="onCreateClick"
				android:src="@drawable/play_button" />

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/NoodleImageButton"
				android:onClick="onLoadImageClick"
				android:src="@drawable/image_button" />

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/JanCaptureButton"
				android:onClick="onCaptureClick"
				android:src="@drawable/camera_button" />
			<requestFocus />
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/SearchButton"
				android:src="@android:drawable/ic_menu_search" />
		</LinearLayout>  
	</LinearLayout>  
	
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>

		<LinearLayout 
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
			<LinearLayout 
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<LinearLayout 
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical">
					
					<TextView
						android:text="JANコード"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						/>
					<EditText 
						android:hint="JANコード" 
						android:id="@+id/JanEdit"
						android:inputType="number"
						android:maxLength="13"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						/>
		
					<TextView
						android:text="商品名"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						/>
					<EditText 
						android:hint="商品名" 
						android:id="@+id/NameEdit"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						/>
					<TextView
						android:text="湯で時間"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						/>
					<EditText 
						android:hint="湯で時間（分）" 
						android:id="@+id/BoilingTimeEdit"
						android:inputType="number"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						/>
				</LinearLayout>
				
				<LinearLayout 
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<TextView
						android:text="麺の種類"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						/>
					<RadioGroup
						android:id ="@+id/NoodleTypeRadioGroup"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						>
					</RadioGroup>
				</LinearLayout>
			</LinearLayout>					
			<TextView
				android:text="商品の説明"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				/>
			<EditText
				android:hint="商品説明"
				android:id="@+id/DescriptionEdit"
				android:inputType="textMultiLine"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				/>	
			<TextView
				android:text="商品の画像"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				/>
			<ImageView
				android:id = "@+id/NoodleImageView"
				android:src= "@drawable/icon"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
